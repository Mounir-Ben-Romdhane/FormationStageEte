<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDC9D5"
    tools:context=".ProfileActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="80sp"
        android:layout_marginRight="10sp"
        android:background="@drawable/shape"
        android:orientation="vertical"
        android:padding="10sp">

        <EditText
            android:id="@+id/fullNameProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15sp"
            android:drawableEnd="@drawable/ic_fullname"
            android:drawableTint="@color/colorApp"
            android:hint="Full Name"
            android:inputType="text"
            android:textAlignment="center"
            android:textSize="15sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/emailProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15sp"
            android:drawableEnd="@drawable/ic_email"
            android:drawableTint="@color/colorApp"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:textAlignment="center"
            android:textSize="15sp"
            android:textStyle="bold"
            android:focusableInTouchMode="false"
            />

        <EditText
            android:id="@+id/cinProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15sp"
            android:drawableEnd="@drawable/ic_cin"
            android:drawableTint="@color/colorApp"
            android:hint="CIN"
            android:inputType="number"
            android:textAlignment="center"
            android:textSize="15sp"
            android:textStyle="bold"

            />

        <EditText
            android:id="@+id/phoneProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15sp"
            android:drawableEnd="@drawable/ic_phone"
            android:drawableTint="@color/colorApp"
            android:hint="Phone Number"
            android:inputType="number"
            android:textAlignment="center"
            android:textSize="15sp"
            android:textStyle="bold"

            />

        <Button
            android:id="@+id/btnEditProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10sp"
            android:backgroundTint="@color/colorApp"
            android:text="edit profile"
            app:cornerRadius="13sp" />

        <Button
            android:id="@+id/btnSignOut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sign out"
            android:layout_gravity="center"
            android:backgroundTint="#FF0000"
            android:textColor="@color/white"
            app:cornerRadius="13sp"
            android:layout_marginTop="10sp"
            android:drawableRight="@drawable/ic_logout"
            android:drawableTint="@color/white"
            />


    </LinearLayout>


</ScrollView>